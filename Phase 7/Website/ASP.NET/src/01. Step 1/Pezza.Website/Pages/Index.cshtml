																</div>
															</div>
														</div>
													</div>*@
												}
											</div>
										</div>
									</div>
									<div class="row row-grid justify-content-between">
										<div class="col-md-12">
											<div class="alert alert-danger product-error" role="alert" style="display:none"></div>
											<br />
											<button id="btnPizzaNext" class="btn btn-primary pull-right">Next</button>
										</div>
									</div>
								</div>
							</div>
							<input type="hidden" id="Products" />
							<input type="hidden" id="Total" />

							<br><br><br>
							<div class="carousel-item">
								<div class="col-12 text-center">
									<h2>Where do you stay?</h2>
								</div>
								<div class="container">
									<div class="row justify-content-center">
										<div class="text-center col-lg-12">
											<h1 class="text-center">Restaurants</h1>
											<div class="row row-grid justify-content-center" id="restaurantDiv">
												@foreach (var restaurant in TempData["RestaurantData"] as List<RestaurantDTO>)
												{
													<div class='col-lg-3'>
														<div class='info'>
															<h4 class='info-title'>@(restaurant.Address?.City)</h4>
															<hr class='line-primary-center' />
															<h3>@(restaurant.Name)</h3>
															<br />
															<a class='btn btn-primary'>Choose Restaurant</a>
														</div>
													</div>
												}
											 </div>
										</div>
									</div>
								</div>
							</div>
							<br><br><br>
							<div class="carousel-item">
								<div class="col-12 text-center">
									<h2>Tell us about you...</h2>
								</div>
								<div class="container">
									<div class="row row-grid justify-content-between">
										<div class="col-md-3"></div>
										<div class="col-md-6">
											<div class="card card-register">
												<div class="card-header">
													<h4 class="card-title">Order</h4>
												</div>
												<div class="card-body">
													<div class="form-group">
														<div class="row">
															<div class="col">
																<label class="label-control">Name</label>
																<input type="text" name="Name" id="CustomerName" class="form-control" />
															</div>
															<div class="col">
																<label class="label-control">Phone</label>
																<input type="tel" name="Phone" id="CustomerPhone" class="form-control" />
															</div>
														</div>
														<br />

														<div class="row">
															<div class="col">
																<label class="label-control">Email</label>
																<input type="email" name="Email" id="CustomerEmail" class="form-control" />
															</div>
															<div class="col">
																<label class="label-control">Contact Person</label>
																<input type="text" name="ContactPerson" id="CustomerContactPerson" class="form-control" />
															</div>
														</div>
														<br />

														<br />
														<fieldset>
															<legend>Delivery</legend>
															<div class="row">
																<div class="col">
																	<label class="label-control">Street Address</label>
																	<input type="text" name="Address" id="Address" class="form-control" />
																</div>
															</div>

															<div class="row">
																<div class="col">
																	<label class="label-control">City</label>
																	<select name="City" id="City" class="form-control"></select>
																</div>
															</div>

															<div class="row">
																<div class="col">
																	<label class="label-control">Province</label>
																	<select name="Address.Province" id="Province" class="form-control"></select>
																</div>
															</div>

															<div class="row">
																<div class="col-xs-12 col-lg-4">
																	<label class="label-control">PostalCode</label>
																	<input type="number" name="PostalCode" id="AddrePostalCodess" class="form-control" />
																</div>
															</div>
															<br />
														</fieldset>
													</div>
												</div>
											</div>
										</div>
										<div class="col-md-3"></div>
									</div>
								</div>
							</div>
						</div>
						<br><br><br>
						<a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
							<span class="carousel-control-prev-icon" aria-hidden="true"></span>
							<span class="sr-only">Previous</span>
						</a>
						<a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
							<span class="carousel-control-next-icon" aria-hidden="true"></span>
							<span class="sr-only">Next</span>
						</a>
					</div>
				</div>
				<div class="col-2">
					<div class="card card-stats">
						<div class="card-body pizza-card">
							<div class="row">
								<div align="center" class="col-12">
									<h3 class="card-title">Your order</h3>
									<p></p>
									<p class="order-summary">Looks like you need some Pezza...</p>
								</div>
							</div>
						</div>
					</div>
					<div align="center" class="input-group product-input-group ">
						<p class="text-center">
							Total R<span id="order-total">0</span>
						</p>
					</div>
					<div class="card-footer">
						<a href="javascript:void(0)" class="btn btn-default btn-lg pull-right">Place your order</a>
					</div>
				</div>
			</div>
		</div>
	</section>

</div>